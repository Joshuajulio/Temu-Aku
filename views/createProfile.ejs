<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap CSS -->
      <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- Slich Slider -->
      <link href="vendor/slick/slick/slick.css" rel="stylesheet">
      <link href="vendor/slick/slick/slick-theme.css" rel="stylesheet">
      <!-- Icofont -->
      <link href="vendor/icofont/icofont.min.css" rel="stylesheet">
      <!-- Font Icons -->
      <link href="vendor/icons/css/materialdesignicons.min.css" rel="stylesheet" type="text/css">
      <!-- Custom Css -->
      <link href="css/style.css" rel="stylesheet">
      <!-- Material Icons -->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Temu Aku</title>

</head>
<body class="bg-white">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Create Your Profile</h3>
                    </div>
                    <div class="card-body">
                        <form action="/<%= userId %>/createProfile" method="POST">
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.UserId %>
                                </p>
                            </div>
                            <div class="mb-3">
                                <label for="fullname" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="fullname" name="fullname" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.fullname %>
                                </p>
                            </div>
                        
                            <div class="mb-3">
                                <label for="picture" class="form-label">Profile Picture</label>
                                <input type="text" class="form-control" id="picture" name="picture" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.picture %>
                                </p>
                            </div>
                        
                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" class="form-control" id="location" name="location" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.location %>
                                </p>
                            </div>
                        
                            <div class="mb-3">
                                <label for="dob" class="form-label">Date of Birth</label>
                                <input type="date" class="form-control" id="dob" name="dob" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.dob %>
                                </p>
                            </div>
                        
                            <div class="row mb-3">
                                <div class="col-md-4">
                                    <label class="form-label">Preference 1</label>
                                    <div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="favorite1" id="favorite1Sea" value="Sea" required>
                                            <label class="form-check-label" for="favorite1Sea">Sea</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="favorite1" id="favorite1Mountain" value="Mountain">
                                            <label class="form-check-label" for="favorite1Mountain">Mountain</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="error-message text-danger small mt-1 mb-3">
                                    <p class="mb-0">
                                        <%= errors?.errors?.favorite1 %>
                                    </p>
                                </div>
                            
                                <div class="col-md-4">
                                    <label class="form-label">Preference 2</label>
                                    <div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="favorite2" id="favorite2Tea" value="Tea" required>
                                            <label class="form-check-label" for="favorite2Tea">Tea</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="favorite2" id="favorite2Coffee" value="Coffee">
                                            <label class="form-check-label" for="favorite2Coffee">Coffee</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="error-message text-danger small mt-1 mb-3">
                                    <p class="mb-0">
                                        <%= errors?.errors?.favorite2 %>
                                    </p>
                                </div>
                            
                                <div class="col-md-4">
                                    <label class="form-label">Preference 3</label>
                                    <div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="favorite3" id="favorite3Dog" value="Dog" required>
                                            <label class="form-check-label" for="favorite3Dog">Dog</label>
                                        </div>
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="favorite3" id="favorite3Cat" value="Cat">
                                            <label class="form-check-label" for="favorite3Cat">Cat</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="error-message text-danger small mt-1 mb-3">
                                    <p class="mb-0">
                                        <%= errors?.errors?.favorite3 %>
                                    </p>
                                </div>
                            </div>    

                            <div class="mb-3">
                                <label for="motto" class="form-label">Your Life Motto</label>
                                <textarea class="form-control" id="motto" name="motto" rows="3" required></textarea>
                            </div>
                        
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg">Create Profile</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <!-- Jquery Js -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Bundle Js -->
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Js -->
    <script src="js/custom.js"></script>
    <!-- Slick Js -->
    <script src="vendor/slick/slick/slick.min.js"></script>
</body>
</html>
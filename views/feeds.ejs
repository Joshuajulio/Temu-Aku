<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap CSS -->
      <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- Slich Slider -->
      <link href="vendor/slick/slick/slick.css" rel="stylesheet">
      <link href="vendor/slick/slick/slick-theme.css" rel="stylesheet">
      <!-- Icofont -->
      <link href="vendor/icofont/icofont.min.css" rel="stylesheet">
      <!-- Font Icons -->
      <link href="vendor/icons/css/materialdesignicons.min.css" rel="stylesheet" type="text/css">
      <!-- Custom Css -->
      <link href="css/style.css" rel="stylesheet">
      <!-- Material Icons -->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Temu Aku</title>

</head>
<body class="bg-white">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" href="/<%= userId %>/feeds">
            <img src="/img/TemuAku_logo.png" height="30">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            <form class="d-flex ms-3" action="/<%= userId %>/feeds" method="GET">
                <select class="form-select me-2" name="tag" aria-label="Filter by tag">
                    <option value="All" selected>All Tags</option>
                    <% tags.forEach(tag => { %>
                    <option value="<%= tag.tagName %>"><%= tag.tagName %></option>
                    <% }) %>
                </select>
                <input class="form-control me-2" type="search" placeholder="Search posts" aria-label="Search" name="query">
                <button class="btn btn-outline-success" type="submit">
                    <i class="fas fa-search">search</i>
                </button>
            </form>
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                <a class="nav-link active" href="/<%= userId %>/feeds">Feed</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/<%= userId %>/findMatch">Find Match</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/<%= userId %>/profile">Profile</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/<%= userId %>/logout">Logout</a>
                </li>
            </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <% posts.forEach(post => { %>
            <div class="card mb-4" style="width: 700px; margin: 0 auto;">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <img src="<%= post.User.Profile.picture %>" alt="Profile Picture" class="rounded-circle me-3" style="width: 50px; height: 50px;">
                        <h5 class="card-title mb-0"><%= post.User.Profile.fullname %></h5>
                    </div>
                    <p class="text-muted"><%= post.duration %></p>
                    <p class="card-text"><%= post.content %></p>
                    <% if (post.imgUrl) { %>
                        <img src="<%= post.imgUrl %>" alt="Post Image" class="img-fluid mb-3" style="width: 700px;">
                    <% } %>
                    <div class="mb-3">
                        <% post.Tags.forEach(tag => { %>
                            <span class="badge bg-secondary me-1"><%= tag.tagName %></span>
                        <% }) %>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <% if (post.Likes.some(like => like.UserId == userId)) { %>
                            <a href="/<%= userId %>/<%= post.id %>/unlike" class="btn btn-primary">
                                <i class="fas fa-thumbs-up"></i> Unlike (<%= post.Likes.length %>)
                            </a>
                        <% } else { %>
                            <a href="/<%= userId %>/<%= post.id %>/like" class="btn btn-outline-primary">
                                <i class="far fa-thumbs-up"></i> Like (<%= post.Likes.length %>)
                            </a>
                        <% } %>
                        <button class="btn btn-outline-secondary comment-toggle">
                            <i class="far fa-comment"></i> Comment
                        </button>
                    </div>
                </div>
                <% if (post.Comments.length > 0) { %>
                    <div class="card-footer">
                        <form action="/<%= userId %>/<%= post.id %>/addComment" method="POST" class="mb-3">
                            <div class="input-group">
                                <input type="text" name="commentContent" class="form-control" placeholder="Write a comment..." required>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane"></i> Send
                                </button>
                            </div>
                        </form>
                        
                        <% post.Comments.forEach(comment => { %>
                            <div class="d-flex mb-2">
                                <img src="<%= comment.User.Profile.picture %>" alt="Commenter Picture" class="rounded-circle me-2" style="width: 30px; height: 30px;">
                                <div>
                                    <strong><%= comment.User.Profile.fullname %>:</strong>
                                    <%= comment.commentContent %>
                                    <span class="text-muted ms-3" style="font-size: 10px;"><%= comment.duration %></span>                                
                                </div>                            
                            </div>
                        <% }) %>
                    </div>
                <% } %>
            </div>
        <% }) %>
    </div>
    <!-- Jquery Js -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Bundle Js -->
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Js -->
    <script src="js/custom.js"></script>
    <!-- Slick Js -->
    <script src="vendor/slick/slick/slick.min.js"></script>

    <script>
        document.querySelectorAll('.comment-toggle').forEach(button => {
            button.addEventListener('click', function() {
                const cardFooter = this.closest('.card-body').nextElementSibling;
                if (cardFooter && cardFooter.classList.contains('card-footer')) {
                    cardFooter.style.display = cardFooter.style.display === 'none' ? 'block' : 'none';
                }
            });
        });
    </script>
</body>
</html>
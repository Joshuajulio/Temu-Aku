<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap CSS -->
      <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      <!-- Slich Slider -->
      <link href="vendor/slick/slick/slick.css" rel="stylesheet">
      <link href="vendor/slick/slick/slick-theme.css" rel="stylesheet">
      <!-- Icofont -->
      <link href="vendor/icofont/icofont.min.css" rel="stylesheet">
      <!-- Font Icons -->
      <link href="vendor/icons/css/materialdesignicons.min.css" rel="stylesheet" type="text/css">
      <!-- Custom Css -->
      <link href="css/style.css" rel="stylesheet">
      <!-- Material Icons -->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Temu Aku</title>

</head>
<body class="bg-white">
    <%- include('./partials/navbar') %>
    
    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg rounded-3">
                    <div class="card-header bg-primary text-white py-4">
                        <h3 class="mb-0 text-center fw-bold">Edit Your Profile</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/<%= userId %>/profile/<%= profile.id %>/edit" method="POST">
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.UserId %>
                                </p>
                            </div>
                            <div class="mb-4">
                                <label for="fullname" class="form-label fw-semibold">Full Name</label>
                                <input type="text" class="form-control form-control-lg rounded-3" id="fullname" name="fullname" value="<%= profile.fullname %>" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.fullname %>
                                </p>
                            </div>
                        
                            <div class="mb-4">
                                <label for="picture" class="form-label fw-semibold">Profile Picture</label>
                                <input type="text" class="form-control form-control-lg rounded-3" id="picture" name="picture" value="<%= profile.picture %>" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.picture %>
                                </p>
                            </div>
                        
                            <div class="mb-4">
                                <label for="location" class="form-label fw-semibold">Location</label>
                                <input type="text" class="form-control form-control-lg rounded-3" id="location" name="location" value="<%= profile.location %>" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.location %>
                                </p>
                            </div>
                        
                            <div class="mb-4">
                                <label for="dob" class="form-label fw-semibold">Date of Birth</label>
                                <input type="date" class="form-control form-control-lg rounded-3" id="dob" name="dob" value="<%= profile.dob.toISOString().split('T')[0] %>" required>
                            </div>
                            <div class="error-message text-danger small mt-1 mb-3">
                                <p class="mb-0">
                                    <%= errors?.errors?.dob %>
                                </p>
                            </div>
                        
                            <div class="row mb-4">
                                <div class="col-md-8">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <label class="form-label fw-semibold mb-3">Preference 1</label>
                                            <div class="d-flex flex-column gap-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="favorite1" id="favorite1Sea" value="Sea" <%= profile.favorite1 === 'Sea' ? 'checked' : '' %> required>
                                                    <label class="form-check-label" for="favorite1Sea">Sea</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="favorite1" id="favorite1Mountain" value="Mountain" <%= profile.favorite1 === 'Mountain' ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="favorite1Mountain">Mountain</label>
                                                </div>
                                            </div>
                                            <div class="error-message text-danger small mt-1">
                                                <p class="mb-0">
                                                    <%= errors?.errors?.favorite1 %>
                                                </p>
                                            </div>
                                        </div>

                                        <div>
                                            <label class="form-label fw-semibold mb-3">Preference 2</label>
                                            <div class="d-flex flex-column gap-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="favorite2" id="favorite2Tea" value="Tea" <%= profile.favorite2 === 'Tea' ? 'checked' : '' %> required>
                                                    <label class="form-check-label" for="favorite2Tea">Tea</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="favorite2" id="favorite2Coffee" value="Coffee" <%= profile.favorite2 === 'Coffee' ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="favorite2Coffee">Coffee</label>
                                                </div>
                                            </div>
                                            <div class="error-message text-danger small mt-1">
                                                <p class="mb-0">
                                                    <%= errors?.errors?.favorite2 %>
                                                </p>
                                            </div>
                                        </div>

                                        <div>
                                            <label class="form-label fw-semibold mb-3">Preference 3</label>
                                            <div class="d-flex flex-column gap-2">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="favorite3" id="favorite3Dog" value="Dog" <%= profile.favorite3 === 'Dog' ? 'checked' : '' %> required>
                                                    <label class="form-check-label" for="favorite3Dog">Dog</label>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="favorite3" id="favorite3Cat" value="Cat" <%= profile.favorite3 === 'Cat' ? 'checked' : '' %>>
                                                    <label class="form-check-label" for="favorite3Cat">Cat</label>
                                                </div>
                                            </div>
                                            <div class="error-message text-danger small mt-1">
                                                <p class="mb-0">
                                                    <%= errors?.errors?.favorite3 %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>                            <div class="mb-4">
                                <label for="motto" class="form-label fw-semibold">Your Life Motto</label>
                                <textarea class="form-control form-control-lg rounded-3" id="motto" name="motto" rows="3" required><%= profile.motto %></textarea>
                            </div>
                        
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5 py-3 rounded-3 fw-bold">Update Profile</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery Js -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Bootstrap Bundle Js -->
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Js -->
    <script src="js/custom.js"></script>
    <!-- Slick Js -->
    <script src="vendor/slick/slick/slick.min.js"></script>

    <script>
        document.querySelectorAll('.comment-toggle').forEach(button => {
            button.addEventListener('click', function() {
                const cardFooter = this.closest('.card-body').nextElementSibling;
                if (cardFooter && cardFooter.classList.contains('card-footer')) {
                    cardFooter.style.display = cardFooter.style.display === 'none' ? 'block' : 'none';
                }
            });
        });
    </script>
</body>
</html>